<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" >
	<ResponsivePopover title="{i18n>dimensionsTitle}" class="sapUiPopupWithPadding" id="DetailsPopover">
		<content>
			<l:Grid>
				<l:content>
					<Text text="{i18n>ProductWidth} : {path: 'ProductWidth', formatter: '.formatter.numberUnit'} {DimensionUnit}"/>
					<Text text="{i18n>ProductHeight} : {path: 'ProductHeight', formatter: '.formatter.numberUnit'} {DimensionUnit}"/>
					<Text text="{i18n>ProductDepth} : {path: 'ProductDepth', formatter: '.formatter.numberUnit'} {DimensionUnit}"/>
				</l:content>
			</l:Grid>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>